        <Button
            android:id="@+id/bt_language"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button_large_size"
            android:layout_margin="@dimen/margin_standard_size_1t5times"
            android:background="@color/colorSecondary"
            android:onClick="onClick"
            android:text="@string/menu_language"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_large_size"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt_about_project"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button_large_size"
            android:layout_margin="@dimen/margin_standard_size_1t5times"
            android:background="@color/colorSecondary"
            android:onClick="onClick"
            android:text="@string/menu_credits"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_large_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_log_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button_large_size"
            android:layout_margin="@dimen/margin_standard_size_1t5times"
