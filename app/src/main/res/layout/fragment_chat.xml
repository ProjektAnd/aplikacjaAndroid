<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="net.mankindenemy.diploma.projektProgramowanieAndroid.ui.fragment.ChatFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:listitem="@layout/item_user" />

    <TextView
        android:id="@+id/tv_empty_list_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/friend_empty_list"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="@dimen/text_huge_size"
        android:textStyle="bold" />

</FrameLayout>