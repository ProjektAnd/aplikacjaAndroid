<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"

    tools:context="net.mankindenemy.diploma.projektProgramowanieAndroid.ui.activity.EditProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_standard_size"
        android:background="@color/colorPrimary"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bt_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/captura_regular"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/margin_toolbar_size"
                android:text="@string/profile_edit_save_button"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/toolbar_button_text_size"
                android:textStyle="bold" />

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>

    <include layout="@layout/fragment_cosmetic_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard_size"
        android:layout_marginTop="@dimen/margin_standard_size"
        android:text="@string/profile_user_name"
        android:textColor="@color/colorTextFieldHeaderOnBackground"
        android:textSize="@dimen/text_field_standard_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard_size"
        android:background="@color/colorSecondaryDark"
        android:gravity="top"
        android:inputType="textMultiLine|textAutoComplete"
        android:padding="@dimen/padding_et_size"
        android:text=""
        android:textColor="@color/colorTextChat"
        android:textColorHint="@color/colorTextChatDark"
        android:textSize="@dimen/text_chat_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard_size"
        android:layout_marginTop="@dimen/margin_standard_size"
        android:text="@string/profile_user_description"
        android:textColor="@color/colorTextFieldHeaderOnBackground"
        android:textSize="@dimen/text_field_standard_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_user_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/margin_standard_size"
        android:background="@color/colorSecondaryDark"
        android:gravity="top"
        android:inputType="textMultiLine|textAutoComplete"
        android:padding="@dimen/padding_et_size"

        android:text=""
        android:textColor="@color/colorTextChat"
        android:textColorHint="@color/colorTextChatDark"
        android:textSize="@dimen/text_chat_size" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard_size"
        android:layout_marginTop="@dimen/margin_standard_size"
        android:text="@string/profile_user_phone"
        android:textColor="@color/colorTextFieldHeaderOnBackground"
        android:textSize="@dimen/text_field_standard_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard_size"
        android:background="@color/colorSecondaryDark"
        android:gravity="top"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_et_size"
        android:text=""
        android:textColor="@color/colorTextChat"
        android:textColorHint="@color/colorTextChatDark"
        android:textSize="@dimen/text_chat_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard_size"
        android:layout_marginTop="@dimen/margin_standard_size"
        android:text="@string/profile_user_location"
        android:textColor="@color/colorTextFieldHeaderOnBackground"
        android:textSize="@dimen/text_field_standard_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard_size"
        android:background="@color/colorSecondaryDark"
        android:gravity="top"
        android:inputType="textMultiLine|textAutoComplete"
        android:padding="@dimen/padding_et_size"
        android:text=""
        android:textColor="@color/colorTextChat"
        android:textColorHint="@color/colorTextChatDark"
        android:textSize="@dimen/text_chat_size" />

</LinearLayout>
